<%- include('../partials/header') %>

<main class="flex justify-between">
<section class="justify-start">
    <%- include('../partials/userProfileSidebar') %>
</section>

<div class="flex flex-col pr-96">

<section class=" text-gray-600 mt-12 p-16">
  <div class="flex flex-col h-full">
      <div class="w-full mx-auto  bg-gray-800 shadow-lg rounded-sm border border-gray-200">
          <header class="px-5 py-4 border-b border-gray-100">
              <h2 class="font-semibold text-white">Wallet</h2>
          </header>
          <div class="p-3">
              <div class="overflow-x-auto">
                  <table class="table-auto w-full">
                      <thead class="text-xs font-semibold uppercase text-gray-400 bg-gray-100 h-8">
                          <tr class="">
                              <th class="pl-24 whitespace-nowrap">
                                  <div class="font-semibold text-left">wallet.status</div>
                              </th>
                              <th class="pl-24 whitespace-nowrap">
                                  <div class="font-semibold text-left">Balance</div>
                              </th>
                          </tr>
                      </thead>
                      <tbody class="text-sm divide-y divide-gray-100">
                          <tr>
                              <% if(wallet) { %>
                                <td class="pl-24 pt-5 whitespace-nowrap">
                                    <div class="text-left font-medium text-green-500"> <%= wallet.status %> </div>
                                </td>
                                <td class="pl-24 pt-5 whitespace-nowrap">
                                    <div class="text-left font-medium text-green-500"> <%= wallet.amount %>₹ </div>
                                </td>
                              <% }else{ %>
                                <td class="pl-24 pt-5 whitespace-nowrap">
                                    <div class="text-left font-medium text-green-500"> Non Active </div>
                                </td>
                                <td class="pl-24 pt-5 whitespace-nowrap">
                                    <div class="text-left font-medium text-green-500"> 0₹ </div>
                                </td>
                                <% } %>
                          </tr>
                      </tbody>
                  </table>
              </div>
          </div>
      </div>
  </div>
</section>

<!------------------------- Transaction -------------------->
   <section class="bg-stone-400">
            <header class="px-5 py-4 border-b border-gray-100">
                <h2 class="font-semibold text-gray-950">Transactions</h2>
            </header>
                    <table class="table-auto w-full">
                        <thead class="text-xs font-semibold uppercase text-gray-400 bg-gray-100 h-8">
                            <tr class="">
                                <th class="pl-24 whitespace-nowrap">
                                    <div class="font-semibold text-left">Transaction Id</div>
                                </th>
                                <th class="pl-24 whitespace-nowrap">
                                    <div class="font-semibold text-left">Discount Price</div>
                                </th>
                                <th class="pl-24 whitespace-nowrap">
                                    <div class="font-semibold text-left">Date</div>
                                </th>
                                <th class="pl-24 whitespace-nowrap">
                                    <div class="font-semibold text-left">Total Amount</div>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="text-sm divide-y divide-gray-100">
                            
                            <%  orders.forEach(order => { %>
                                <tr>
                                  <td class="pl-24 pt-5 whitespace-nowrap">
                                      <div class="text-left font-thin text-gray-950"> <%= order.ordId %> </div>
                                  </td>
                                  <td class="pl-24 pt-5 whitespace-nowrap">
                                      <div class="text-left font-thin text-gray-950"> <%= order.discountPrice %> </div>
                                  </td>
                                  <td class="pl-24 pt-5 whitespace-nowrap">
                                      <div class="text-left font-thin text-gray-950">
                                        <% var createDate = new Date(order.createdate), date = createDate.toLocaleDateString(); %>
                                        <p><%= date %></p>
                                     </div>
                                  </td>
                                  <td class="pl-24 pt-5 whitespace-nowrap">
                                      <div class="text-left font-thin text-gray-950"> <%= order.total %>₹ </div>
                                  </td>
                                <% }) %>
                            </tr>
                        </tbody>
                    </table>
       
  </section>

</div>
</main>

<%- include('../partials/footer') %>