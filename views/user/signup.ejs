<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <title>Signup</title>
    <script src="https://cdn.tailwindcss.com"></script>     
</head>
<body>
<div class="flex min-h-full flex-col justify-center px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <!-- Logo if wanted -->
    <!-- <div class="text-center font-mono text-3xl font-bold">
        <span class="mx-auto h-10 w-auto">OneCart</span>
    </div> -->
    <h2 class="text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Register</h2>
  </div>
<div id="error">
  
</div>
  <div class="px-16 py-10 mt-5 sm:mx-auto sm:w-full sm:max-w-sm bg-gray-200 ">
    <form id="form" class="space-y-6" method="post" action="/signup" >

      <div>
        <label for="name" class="block text-sm font-medium leading-6 text-gray-900">Name</label>
        <div class="mt-2">
          <input minlength="4" maxlength="16" id="name" name="name" type="name" autocomplete="name" required class=" h-7 block w-full border border-gray-500 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
        </div>
      </div>

      <div>
        <div class="flex items-center justify-between">
          <label for="email" class="block text-sm font-medium leading-6 text-gray-900">Email</label>

        </div>
        <div class="mt-2">
          <input minlength="8" id="email" name="email" type="email" autocomplete="current-email" required class="h-7 block w-full border border-gray-500 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
        </div>
      </div>
      <div>
        <div class="flex items-center justify-between">
          <label for="phone" class="block text-sm font-medium leading-6 text-gray-900">Phone</label>

        </div>
        <div class="mt-2">
          <input minlength="10" id="phone" name="phone" type="tel"  autocomplete="current-phone" required class="h-7 block w-full border border-gray-500 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
        </div>
      </div>
      <div>

        <div class="flex items-center justify-between">
          <label minlength="8" for="password" class="block text-sm font-medium leading-6 text-gray-900">Password</label>
        </div>
        <div class="mt-2">
          <input id="password" name="password" type="password" autocomplete="current-password" required class="h-7 block w-full  border border-gray-500 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
        </div>
      </div>
      <div>
        <div class="flex items-center justify-between">
          <label minlength="8" for="confirmPassword" class="block text-sm font-medium leading-6 text-gray-900">Repeat Password</label>

        </div>
        <div class="mt-2">
          <input id="confirmPassword" name="confirmPassword" type="password" autocomplete="current-confirmPassword" required class="h-7 block w-full border border-gray-500 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
        </div>
      </div>

      <div class="flex">
        <button type="submit" class="flex w-24 justify-center bg-green-400 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-green-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Register</button>
      </div>
    </form>
<div class="flex-row ">
  <p class="mt-5 text-center text-sm text-gray-500">
    Already a member?
    <a href="/login" class="font-semibold leading-6 text-indigo-600 hover:text-indigo-500">Login to Account</a>
  </p>
</div>
  </div>
   </main>




   <script>
    const name = document.getElementById('name');
    const email = document.getElementById('email');
    const phone = document.getElementById('phone');
    const password = document.getElementById('password');
    const confirmPassword = document.getElementById('confirmPassword');
    
    const form = document.getElementById('form');
    const errorElement = document.getElementById('error');
    
    form.addEventListener('submit',(e) => {
      let messages = [];
    
      // Name validation
      if(name.value === '' || name.value == null){
        messages.push('Name is required');
      }
    
      // Email validation (basic check)
      if (!/^\S+@\S+\.\S+$/.test(email.value)) {
        messages.push('Invalid email address');
      }
    
      // Phone number validation (Indian country code)
      if (!/^91\d{10}$/.test(phone.value)) {
        messages.push('Phone number must start with Indian country code (91)');
      }
    
      // Password validation (should contain symbols and be at least 6 characters long)
      if (!/(?=.*[!@#$%^&*])/.test(password.value) || password.value.length < 6 || password.value.toLowerCase() === 'password') {
        messages.push('Password should contain symbols and be at least 6 characters long, and cannot be "password"');
      }
    
      // Confirm password validation
      if (password.value !== confirmPassword.value) {
        messages.push('Passwords do not match');
      }
    
      // Display error messages or submit form
      if(messages.length > 0){
        e.preventDefault();
        errorElement.innerText = messages.join(', ');
      } else {
        // No errors, allow form submission
        errorElement.innerText = ''; // Clear any previous error messages
      }
    });
    </script>
    
    
  
</body>
</html>
    