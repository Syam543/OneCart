        const select = td.querySelector('select');
        const orderStatus = select.value;
        const orderId = td.querySelector('#orderId').getAttribute('value');

        fetch('/admin/orderStatus',{
        method:"POST",
          headers:{
              "Content-Type" : "application/json"
          },
